# yaml-language-server: $schema=https://raw.githubusercontent.com/david-loe/frappe-optigem-gdi-sync/refs/heads/main/config.schema.json

databases:
  main_db:
    type: mssql
    server: mssql.example.com
    trust_server_certificate: true
    database: mydatabase
    user: dbuser
    password: securepassword
  backup_db:
    type: firebird
    host: firebird.example.com
    port: 3050
    charset: UTF8
    database: backupdb
    user: fbuser
    password: anotherpassword

frappe:
  api_key: your_frappe_api_key
  api_secret: your_frappe_api_secret
  limit_page_length: 50
  url: https://frappe.example.com

tasks:
  sync_users:
    direction: bidirectional
    doc_type: User
    db_name: main_db
    mapping:
      name: username
      email: user_email
    key_fields:
      - name
    table_name: users
    frappe:
      modified_fields:
        - modified
      id_field: name
      datetime_fields: [modified]
      int_fields: [user_id]
      fk_id_field: user_id
    db:
      modified_fields:
        - last_modified
      fk_id_field: user_id
      id_field: id
    delete: true
    datetime_comparison_accuracy_milliseconds: 100

  import_orders:
    direction: db_to_frappe
    doc_type: Order
    db_name: backup_db
    mapping:
      order_id: id
      order_date: date
    key_fields:
      - order_id
    table_name: orders
    frappe:
      modified_fields:
        - modified
      id_field: name
      datetime_fields: [modified]
      int_fields: []
    db:
      modified_fields:
        - updated_at
    process_all: true

  export_invoices:
    direction: frappe_to_db
    doc_type: Invoice
    db_name: main_db
    mapping:
      invoice_number: number
      amount: total
    key_fields:
      - invoice_number
    table_name: invoices

dry_run: false
timestamp_file: timestamps.db
timestamp_buffer_seconds: 15
